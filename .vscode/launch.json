{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch aoc2016",
      "program": "${workspaceFolder}/aoc2016/output/main.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'aoc2015'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=aoc2015"
        ],
        "filter": {
          "name": "aoc2015",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'aoc2015'",
      "sourceLanguages": [
        "rust"
      ],
      "cargo": {
        "args": [
          "build",
          "--bin=aoc2015",
          "--package=aoc2015"
        ],
        "filter": {
          "name": "aoc2015",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug 2016",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "gdb",
        "program": "${workspaceFolder}/output/main"
      },
      "osx": {
        "MIMode": "lldb",
        "miDebuggerPath": "lldb-mi",
        "program": "${workspaceFolder}/output/main"
      },
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "gdb",
        "program": "${workspaceFolder}/aoc2016/output/main.exe"
      },
      "preLaunchTask": "build"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": ".",
      "program": "build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}